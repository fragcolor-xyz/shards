GFX.MainWindow(
  Contents: {
    Once({
      GFX.DrawQueue >= ui-draw-queue
      GFX.UIPass(ui-draw-queue) >> render-steps
    })
    UI(
      ui-draw-queue
      UI.CentralPanel({
        UI.Float3Slider(
          Variable: float3
          Min: @f3(0)
          Max: @f3(1)
        ) | ExpectFloat3
      })
    )

    GFX.Render(Steps: render-steps)
  }
)