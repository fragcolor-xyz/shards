GFX.MainWindow(
  Contents: {
    Once({
      GFX.DrawQueue >= ui-draw-queue
      GFX.UIPass(ui-draw-queue) >> render-steps
    })
    UI(
      ui-draw-queue
      UI.CentralPanel({
        UI.Int4Slider(
          Variable: int4
          Min: @i4(1)
          Max: @i4(100)
        ) | ExpectInt4
      })
    )

    GFX.Render(Steps: render-steps)
  }
)