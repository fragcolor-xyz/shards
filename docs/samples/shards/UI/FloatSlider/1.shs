GFX.MainWindow(
  Contents: {
    Once({
      GFX.DrawQueue >= ui-draw-queue
      GFX.UIPass(ui-draw-queue) >> render-steps
    })
    UI(
      ui-draw-queue
      UI.CentralPanel({
        UI.FloatSlider(
          Variable: float
          Min: 0.0
          Max: 1.0
        ) | ExpectFloat
      })
    )

    GFX.Render(Steps: render-steps)
  }
)