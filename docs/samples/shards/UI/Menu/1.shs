GFX.MainWindow(
  Contents: {
    Once({
      GFX.DrawQueue >= ui-draw-queue
      GFX.UIPass(ui-draw-queue) >> render-steps
    })
    UI(
      ui-draw-queue
      UI.TopPanel(
        Contents:
          UI.MenuBar(
            UI.Menu(
              Title: "File" 
              Contents:
                UI.Button("Exit")
            )
          )
      )
    )

    GFX.Render(Steps: render-steps)
  }
)