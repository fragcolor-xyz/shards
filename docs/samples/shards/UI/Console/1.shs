GFX.MainWindow(
  Contents: {
    Once({
      GFX.DrawQueue >= ui-draw-queue
      GFX.UIPass(ui-draw-queue) >> render-steps
    })
    UI(
      ui-draw-queue
      UI.CentralPanel({
        UI.Button("Say Hello" Msg("Hello!"))
        CaptureLog(Size: 24 MinLevel: "info" Pattern: "%^[%l]%$ [%Y-%m-%d %T.%e] %v")
        | String.Join 
        | UI.Console
      })
    )

    GFX.Render(Steps: render-steps)
  }
)