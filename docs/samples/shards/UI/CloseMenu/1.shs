GFX.MainWindow(
  Contents: {
    Once({
      GFX.DrawQueue >= ui-draw-queue
      GFX.UIPass(ui-draw-queue) >> render-steps
    })
    UI(
      ui-draw-queue
      {
        UI.TopPanel(Contents: {
          UI.MenuBar({
            UI.Menu(Title: "Menu" Contents: UI.Button("Close" UI.CloseMenu))
          })
        })
      }
    )

    GFX.Render(Steps: render-steps)
  }
)