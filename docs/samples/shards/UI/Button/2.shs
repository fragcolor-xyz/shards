GFX.MainWindow(
  Contents: {
    Once({
      GFX.DrawQueue >= ui-draw-queue
      GFX.UIPass(ui-draw-queue) >> render-steps
    })
    UI(
      ui-draw-queue
      UI.CentralPanel({
        UI.Button(
          Label: "Click me!"
          Style: {
            color: @color(255 255 0)
          }
          Action: Msg("Clicked")
        )
      })
    )

    GFX.Render(Steps: render-steps)
  }
)