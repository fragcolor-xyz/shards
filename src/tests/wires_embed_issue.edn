(defn logic [shards]
  (-> (Maybe shards)))

(defwire test-wire
  (Take "input-x") = .x
  (logic (-> {"x" .x "y" 20 "z" 30})))

(defn template []
  (-> {"input-x" 10} (Do test-wire)))

(defn test []
  (let [mesh (Mesh)
        wire (Wire
               "test"
               (template) = .res
               .res)
        code (do
               (schedule mesh wire)
               (run mesh 0.1)
                    ; stop returns the text code
               (stop wire))
        res (read-var code)]
    res))

(test)
